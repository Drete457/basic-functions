{
    "name": "web-basic-functions",
    "private": false,
    "version": "0.0.12",
    "license": "MIT",
    "description": "The fundamental functions that a Front-End Developer may require for their projects",
    "author": {
        "name": "Filipe Mota",
        "github": "https://github.com/Drete457",
        "linkedin": "https://www.linkedin.com/in/filipeantoniomota/"
    },
    "copyright": "Filipe Mota",
    "repository": {
        "type": "git",
        "url": "https://github.com/Drete457/web-basic-functions.git"
    },
    "files": [
        "dist/*"
    ],
    "main": "./dist/web-basic-functions.umd.js",
    "module": "./dist/web-basic-functions.es.js",
    "exports": {
        ".": {
            "import": "./dist/web-basic-functions.es.js",
            "require": "./dist/web-basic-functions.umd.js"
        }
    },
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "pretty": "prettier --write \"src/**/*.{css,js,json,ts,tsx}\"",
        "update": "yarn-upgrade-all",
        "upgrade": "yarn upgrade-interactive",
        "prettyBuild": "prettier --write \"src/**/*.{css,js,json,ts,tsx}\" && tsc && vite build",
        "publish": "np"
    },
    "keywords": [
        "frontend",
        "front-end",
        "web-function",
        "basic-functions",
        "typescript",
        "typescript-functions"
    ],
    "dependencies": {
        "autoprefixer": "^10.4.13",
        "axios": "^1.2.3",
        "np": "^7.6.3",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.7.0"
    },
    "devDependencies": {
        "@types/node": "^18.11.18",
        "@types/react": "^18.0.27",
        "@types/react-dom": "^18.0.10",
        "@typescript-eslint/eslint-plugin": "^5.48.2",
        "@typescript-eslint/parser": "^5.48.2",
        "@vitejs/plugin-react-swc": "^3.0.1",
        "eslint": "^8.32.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-prettier": "^8.6.0",
        "eslint-import-resolver-typescript": "^3.5.3",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.32.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "prettier": "^2.8.3",
        "regenerator-runtime": "^0.13.11",
        "typescript": "^4.9.4",
        "vite": "^4.0.4",
        "vite-plugin-remove-console": "^1.3.0",
        "yarn-upgrade-all": "^0.7.2"
    }
}
